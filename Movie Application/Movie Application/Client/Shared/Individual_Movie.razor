<div>
    <p>Title: <b>@Movie.Title</b></p>
    <p>Release Date: <b>@Movie.ReleaseDate.ToString("dd MM yyyy")</b></p>
    @if (DisplayButton)
    {
        <div>
            <button @onclick="@(() => DeleteIndividualMovie.InvokeAsync(Movie))">Delete</button>
        </div>
    }
</div>




@code {
    //need to pass in the parameter for the individual movie
    [Parameter] public Movie Movie { get; set; }
    [Parameter] public bool DisplayButton { get; set; } = false;
    //allows us to delegate to the parent component which is the movie component
    [Parameter] public EventCallback<Movie> DeleteIndividualMovie { get; set; }




}
